rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access to prevent unintentional data exposure
    match /{document=**} {
      allow read, write: if false;
    }

    // User Profiles:
    // Allow authenticated users to read, update, or delete their *own* user document.
    // Allow any authenticated user to create their initial user document (usually upon signup).
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Example for a potential 'trends' collection (if you add one later)
    // Adjust permissions based on your application's needs.
    // match /trends/{trendId} {
    //   // Allow any authenticated user to read trends
    //   allow read: if request.auth != null;
    //   // Example: Restrict writing trends to specific admin roles (requires custom claims)
    //   // allow write: if request.auth != null && request.auth.token.isAdmin == true;
    // }

    // Example for a potential 'user_alerts' collection (if you add one later)
    // match /user_alerts/{userId}/alerts/{alertId} {
    //    // Allow users to read/write their own alerts
    //   allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
